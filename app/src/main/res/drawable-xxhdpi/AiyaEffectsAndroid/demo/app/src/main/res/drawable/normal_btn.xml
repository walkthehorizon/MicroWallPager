<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="@color/color_normal_btn_focus" />
            <stroke android:color="@color/color_normal_btn_border" android:width="2dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="@color/color_normal_btn" />
            <stroke android:color="@color/color_normal_btn_border" android:width="2dp" />
        </shape>
    </item>
</selector>